  aa = add --all
  b = branch
  c = commit
  cl = "!hub clone"
  st = status -sb
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[commit]
  template = ~/.gitmessage
[core]
  quotepath = false
  editor = vim
  excludesfile = ~/.gitignore
[diff]
