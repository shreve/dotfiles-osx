[alias]
  aa = add --all
  b = branch
  c = commit
  cl = "!hub clone"
  ctags = "!.git/hooks/ctags"
  st = status -sb
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[commit]
  template = ~/.gitmessage
[core]
	quotepath = false
  editor = vim
  excludesfile = ~/.gitignore
  mergetool = vim
[diff]
  tool = FileMerge
[help]
  autocorrect = 1
[init]
  templatedir = ~/dotfiles/git/template
[merge]
  tool = vim
[push]
  default = upstream
[user]
  name = Jacob Evan Shreve
  email = jacob@shreve.ly
[url "git@heroku.com:"]
  insteadOf = heroku:     # $ git remote add heroku:my-app.git
[url "git@github.com:"]
  insteadOf = github:     # $ git remote add github:my-repo.git
[difftool "FileMerge"]
  path = /Applications/Xcode.app/Contents/Applications/FileMerge.app
